<% include ../partials/header %>
<div class="container">
  
  <div class="row">
  <h1 style="text-align: center;">Edit <%= hummus.name %></h1>
     <div style="width: 30%; margin: 25px auto;">
     <form action="/restaurant/<%= hummus._id %>?_method=PUT" method="POST">
            <div class="form-group">
             <input class="form-control" type="text" name="hummus[name]" value="<%= hummus.name %>">
          </div>
          <div class="form-group">
             <input class="form-control" type="number" name="hummus[price]" value="<%= hummus.price %>" min="1" step="1">
            </div>
            <div class="form-group">
             <input class="form-control" type="text" name="hummus[image]" value="<%= hummus.image %>">
             </div>
              <div class="form-group">
             <input class="form-control" type="number" name="hummus[rating]" value="<%= hummus.rating %>" min="0.5" step="0.5">
             </div>
             <div class="form-group">
              <textarea name="hummus[description]" placeholder="review" class="form-control" cols="40" rows="5"><%= hummus.description %></textarea>
             <!--<input class="form-control" type="text" name="hummus[description]" value="">-->
             </div>
             <div class="form-group">
       <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
            
     </form>
       <a href="/restaurant">חזור</a>
     </div>
     
  
    </div>
</div>
<% include ../partials/footer %>