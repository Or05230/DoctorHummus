<% include ../partials/header %>
<div class="container">
  
  <div class="row">
  <h1 style="text-align: center;">הוסף ביקורת חדשה</h1>
     <div style="width: 30%; margin: 25px auto;">
     <form action="/restaurant" method="POST">
            <div class="form-group">
             <input class="form-control" type="text" name="name" placeholder="שם החומוסיה">
               </div>
             <div class="form-group">
             <input class="form-control" type="number" name="price" placeholder="מחיר מנת חומוס" min="1" step="1">
            </div>
            <div class="form-group">
             <input class="form-control" type="text" name="image" placeholder="תמונה של המנה">
             </div>
             <div class="form-group">
              <input class="form-control" type="number" name="rating" placeholder="ציון למנה" min="1" max="10" step="0.5">
              </div>
             <div class="form-group">
               <textarea name="description" placeholder="review" class="form-control" cols="40" rows="5"></textarea>
             <!--<input class="form-control" type="text" name="description" placeholder="ביקורת">-->
             </div>
             <div class="form-group">
       <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
            
     </form>
       <a href="/restaurant">חזור</a>
     </div>
     
  
    </div>
</div>
<% include ../partials/footer %>